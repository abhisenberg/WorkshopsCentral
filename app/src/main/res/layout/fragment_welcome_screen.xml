<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.abheisenberg.workshopscentral.WelcomeFragment">

    <Button
        android:id="@+id/bt_signoutW"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:text="Sign out"
        android:background="@drawable/button_signout"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_above="@id/bt_signoutW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

       <LinearLayout
           android:id="@+id/signinthings"
           android:layout_marginTop="30dp"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/tv_signInText"
               android:text="@string/signinText"
               android:textSize="18sp"
               android:layout_gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

           <Button
               android:id="@+id/bt_signinW"
               android:layout_gravity="center"
               android:text="@string/signinNow"
               android:background="@drawable/button_signin"
               android:textColor="@android:color/white"
               android:layout_marginStart="15dp"
               android:layout_marginEnd="15dp"
               android:textStyle="bold"
               android:layout_width="match_parent"
               android:layout_marginTop="2dp"
               android:textSize="14sp"
               android:layout_height="wrap_content" />

       </LinearLayout>

       <LinearLayout
           android:id="@+id/registerthings"
           android:layout_marginTop="15dp"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/tv_registerText"
               android:text="@string/registerText"
               android:textSize="18sp"
               android:layout_gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

           <Button
               android:id="@+id/bt_registerW"
               android:layout_gravity="center"
               android:text="@string/register"
               android:layout_marginTop="2dp"
               android:textColor="@android:color/white"
               android:textStyle="bold"
               android:layout_marginStart="15dp"
               android:layout_marginEnd="15dp"
               android:background="@drawable/button_signin"
               android:layout_width="match_parent"
               android:textSize="14sp"
               android:layout_height="wrap_content" />

       </LinearLayout>

   </LinearLayout>

    <TextView
        android:id="@+id/emptytag"
        android:layout_centerInParent="true"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_showList"
        android:layout_above="@id/emptytag"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/iconws"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_above="@id/bt_showList"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:text="Click to Find Workshops"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
