<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:layout_marginTop="70dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    tools:context="com.abheisenberg.workshopscentral.RegisterFragment">

   <EditText
       android:id="@+id/et_nameR"
       android:hint="Name"
       android:layout_gravity="center"
       android:layout_width="match_parent"
       android:background="@drawable/etbox_modified_states"
       android:padding="10dp"
       android:layout_height="50dp" />

   <EditText
       android:id="@+id/et_phoneR"
       android:hint="Phone no."
       android:layout_marginTop="10dp"
       android:inputType="number"
       android:layout_gravity="center"
       android:layout_width="match_parent"
       android:background="@drawable/etbox_modified_states"
       android:padding="10dp"
       android:layout_height="50dp" />

   <EditText
       android:id="@+id/et_emailR"
       android:hint="Email"
       android:layout_marginTop="10dp"
       android:inputType="textEmailAddress"
       android:layout_gravity="center"
       android:layout_width="match_parent"
       android:background="@drawable/etbox_modified_states"
       android:padding="10dp"
       android:layout_height="50dp" />

   <EditText
       android:id="@+id/et_pwR"
       android:inputType="textPassword"
       android:layout_gravity="center"
       android:layout_marginTop="10dp"
       android:hint="Password"
       android:layout_width="match_parent"
       android:background="@drawable/etbox_modified_states"
       android:padding="10dp"
       android:layout_height="50dp"
       />

   <Button
       android:id="@+id/bt_register"
       android:text="@string/register"
       android:layout_gravity="center"
       android:layout_marginTop="50dp"
       android:layout_height="wrap_content"
       android:background="@drawable/button_signin"
       android:layout_marginStart="15dp"
       android:layout_marginEnd="15dp"
       android:textColor="#FFF"
       android:textStyle="bold"
       android:layout_width="match_parent"
       />

</LinearLayout>
